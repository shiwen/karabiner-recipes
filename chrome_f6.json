{
    "title": "Press F6 to focus on the address bar in Chrome",
    "rules": [
        {
            "description": "Press F6 to focus on the address bar in Chrome",
            "manipulators": [
                {
                    "from": {
                        "key_code": "f6",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "l",
                            "modifiers": [
                                "command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.google\\.Chrome$"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}

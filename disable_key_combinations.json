{
    "title": "Disable some key combinations",
    "rules": [
        {
            "description": "Disable command+q",
            "manipulators": [
                {
                    "from": {
                        "key_code": "q",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "vk_none"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Disable command+w in iTerm2",
            "manipulators": [
                {
                    "from": {
                        "key_code": "w",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "vk_none"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Disable command+r in iTerm2",
            "manipulators": [
                {
                    "from": {
                        "key_code": "r",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "vk_none"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}

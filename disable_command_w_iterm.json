{
    "title": "Disable command+W in iTerm2",
    "rules": [
        {
            "description": "Disable command+Q",
            "manipulators": [
                {
                    "from": {
                        "key_code": "w",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "vk_none"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}

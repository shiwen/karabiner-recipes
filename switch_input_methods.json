{
    "title": "Use shift to switch input methods",
    "rules": [
        {
            "description": "Use shift to switch input method to Sogou Pinyin",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "select_input_source": {
                                "input_source_id": "com.sogou.inputmethod.sogou.pinyin"
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "input_sources": [
                                {
                                    "input_source_id": "com.sogou.inputmethod.sogou.pinyin"
                                }
                            ],
                            "type": "input_source_unless"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
